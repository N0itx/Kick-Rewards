{
  "manifest_version": 3,
  "name": "Kick Rewards",
  "version": "2.0",
  "description": "Genera una lista de los usuarios que canjearon recompensas",
  "permissions": [
    "activeTab",
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "*://kick.com/*",
    "*://*.kick.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://dashboard.kick.com/*"],
      "js": ["js/jquery.min.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}